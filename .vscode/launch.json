{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${workspaceFolder}/src/index.ts"
      ],
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_ENV": "development",
        "TS_NODE_SKIP_IGNORE": "true",
        "NETWORK": "testnet",
        "PGDATABASE": "postgres",
        "PGHOST": "localhost",
        "PGPORT": "5432",
        "PGUSER": "postgres",
        "PGPASSWORD": "postgres",
        "STACKS_NODE_RPC_HOST": "127.0.0.1",
        "STACKS_NODE_RPC_PORT": "20443",
        "REDIS_URL": "redis://127.0.0.1:8379",
      },
      "killBehavior": "polite",
      "preLaunchTask": "npm: testenv:run",
      "postDebugTask": "npm: testenv:stop",
      "nodeVersionHint": 22
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Generate OpenAPI spec",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceFolder}/util/openapi-generator.ts"],
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_ENV": "development",
        "TS_NODE_SKIP_IGNORE": "true"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: unit tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": [
        "--testTimeout=3600000",
        "--runInBand",
        "--no-cache",
        "--selectProjects",
        "unit-tests",
      ],
      "outputCapture": "std",
      "console": "internalConsole",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: db tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": [
        "--testTimeout=3600000",
        "--runInBand",
        "--no-cache",
        "--selectProjects",
        "db-tests",
      ],
      "outputCapture": "std",
      "console": "internalConsole",
    },
    {
      "name": "Chunk parser prototyping",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/chunk-parser/src/index.ts",
      "cwd": "${workspaceFolder}/chunk-parser",
      "runtimeExecutable": "tsx",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "csv-to-json",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/testing/csv-to-json.js"
    },
  ]
}
